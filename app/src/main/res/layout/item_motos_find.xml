<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="16dp"
    android:background="@color/black"
    android:layout_margin="16dp"
    android:layout_height="250dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:text="Busqueda"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textViewDescMoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Moto"
            app:layout_constraintStart_toEndOf="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <TextView
            android:id="@+id/textViewMoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/textViewDescMoto"
            app:layout_constraintStart_toEndOf="@+id/textViewDescMoto"
            app:layout_constraintTop_toTopOf="@+id/textViewDescMoto" />


        <TextView
            android:id="@+id/textViewDescBateriaOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/bateria_1"
            app:layout_constraintEnd_toEndOf="@+id/textViewDescMoto"
            app:layout_constraintStart_toStartOf="@+id/textViewDescMoto"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescMoto" />

        <TextView
            android:id="@+id/textViewDescBateriaTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/bateria_2"
            app:layout_constraintEnd_toEndOf="@+id/textViewDescBateriaOne"
            app:layout_constraintStart_toStartOf="@+id/textViewDescBateriaOne"
            app:layout_constraintTop_toBottomOf="@+id/textViewDescBateriaOne" />

        <TextView
            android:id="@+id/textViewBateriaOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/textViewDescBateriaOne"
            app:layout_constraintStart_toEndOf="@+id/textViewDescBateriaOne"
            app:layout_constraintTop_toTopOf="@+id/textViewDescBateriaOne" />

        <TextView
            android:id="@+id/textViewBateriaTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="@+id/textViewDescBateriaTwo"
            app:layout_constraintStart_toEndOf="@+id/textViewDescBateriaTwo"
            app:layout_constraintTop_toTopOf="@+id/textViewDescBateriaTwo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>